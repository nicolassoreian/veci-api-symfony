<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="apple-touch-icon" sizes="180x180" href="{{ absolute_url(asset('build/images/backend/apple-touch-icon.png')) }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ absolute_url(asset('build/images/backend/favicon-32x32.png')) }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ absolute_url(asset('build/images/backend/favicon-16x16.png')) }}">

    {% block stylesheets %}
      {{ encore_entry_link_tags('backend') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('backend') }}
    {% endblock %}
  </head>

  <body>
    <div class="d-flex flex-column min-vh-100">
        <div class="row flex-grow-1 gx-0">
            <div class="aside col-2 text-bg-secondary-light px-0">
                {% include '@backend/_aside.html.twig' %}
            </div>

            <div class="col-10 px-4">
                <div class="py-5 ms-5">
                    {% include '@backend/_header.html.twig' %}

                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">{{ message|raw }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
  </body>
</html>
