<form method="post" action="{{ path('backend_' ~ config.entity ~ '_delete', {'id': entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button class="btn btn-danger">{{ 'ui.button.delete'|trans }}</button>
</form>
