<div class="card mb-5 mb-xl-10">
    <div class="card-title py-4 px-5 m-0">
        <h3 class="fw-bold m-0">{{ 'ui.avatar'|trans }}</h3>
    </div>

    <div class="card-body p-5 m-0 pt-2">
        <div class="d-flex flex-column justify-content-center text-center">
            <div class="symbol symbol-100px symbol-circle mb-3">
                <div class="col mb-4">
                    {{ form_widget(form.profile.image) }}
                </div>
            </div>

            {% if isNew is not defined %}
            <div class="fs-4 fw-bold mb-2">
                {{ user.fullName }}
            </div>

            <div class="mb-5">
                <div class="mb-1">
                    <span class="badge text-bg-primary text-white">{{ user.roles|first|trans }}</span>
                </div>
            </div>

            <div class="fw-bold mb-3">
                <div class="mb-1">{{ 'ui.posts'|trans }}</div>

                <div class="d-flex justify-content-around">
                    <div class="border border-gray-300 border-dashed rounded py-3 px-3 mb-3">
                        <div class="fs-4 text-gray-700">
                            <span class="w-75px">{{ user.id }}</span>
                        </div>
                        <div class="fw-semibold text-muted">{{ 'ui.published_posts'|trans }}</div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        {% if isNew is not defined %}
        <div class="d-flex flex-column">
            <div class="fw-bold fs-4 border-bottom">
                {{ 'ui.details'|trans }}
            </div>

            <div class="fs-6 mb-2 mt-3">
                <div class="fw-bold">{{ 'ui.account_id'|trans }}</div>
                <div class="text-gray-600">ID-{{ user.id }}</div>
            </div>

            <div class="fs-6 mb-2 mt-3">
                <div class="fw-bold">{{ 'ui.email'|trans }}</div>
                <div class="text-gray-600">{{ user.email }}</div>
            </div>

            <div class="fs-6 mb-2 mt-3">
                <div class="fw-bold">{{ 'ui.last_login'|trans }}</div>

            </div>
        </div>
        {% endif %}
    </div>

    <div class="card-footer d-flex justify-content-end p-5 pb-4">
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-light me-2">{{ 'ui.button.cancel'|trans }}</a>
        <button type="submit" class="btn btn-primary">{{ button_label|default('ui.button.save')|trans }}</button>
    </div>
</div>