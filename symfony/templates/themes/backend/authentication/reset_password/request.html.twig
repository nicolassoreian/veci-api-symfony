{% block title %}{{ 'ui.reset_password'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'ui.reset_password'|trans }}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}

        <button class="btn btn-primary">{{ 'ui.button.reset_password_email'|trans }}</button>
    {{ form_end(requestForm) }}
{% endblock %}
