{%- block vich_file_row -%}
    {%- set force_error = true -%}
    {{- block('form_row') -}}
{%- endblock -%}

{%- block vich_file_widget -%}
    <div class="vich-file">
        {%- if errors|length > 0 -%}
            {%- set attr = attr|merge({class: (attr.class|default('') ~ ' is-invalid')|trim}) -%}
        {%- endif -%}
        {{- form_widget(form.file, {attr: attr}) -}}
        {%- if form.delete is defined -%}
            {{- form_row(form.delete) -}}
        {%- endif -%}

        {%- if download_uri -%}
            <a href="{{ asset_helper is same as(true) ? asset(download_uri) : download_uri }}" download>
                {{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}
            </a>
        {%- endif -%}
    </div>
{%- endblock -%}

{%- block vich_image_row -%}
    {%- set force_error = true -%}
    {{- block('form_row') -}}
{%- endblock -%}

{%- block vich_image_widget -%}
    <div class="vich-image" data-controller='vich-image'>
        <div class="mb-3">
          {%- if image_uri -%}
            <img src="{{ asset(image_uri) | imagine_filter('thumbnail4x3')}}" class="img-fluid w-100 " alt="" />
          {%- else -%}
            <img src="{{ 'ui.no_image'|trans }}" class="img-fluid no-image" alt="{{ 'ui.no_image'|trans }}" />
          {%- endif -%}

          {%- if download_uri -%}
              <a href="{{ asset_helper is same as(true) ? asset(download_uri) : download_uri }}" download>
                  {{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}
              </a>
          {%- endif -%}
        </div>

        {%- if errors|length > 0 -%}
            {%- set attr = attr|merge({class: (attr.class|default('') ~ ' is-invalid')|trim}) -%}
        {%- endif -%}

        {{- form_widget(form.file, {attr: attr}) -}}
        {%- if form.delete is defined -%}
            {{- form_row(form.delete) -}}
        {%- endif -%}
    </div>
{%- endblock -%}
